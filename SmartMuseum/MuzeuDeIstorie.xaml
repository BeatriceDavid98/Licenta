<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartMuseum.MuzeuDeIstorie"
             BackgroundColor="AliceBlue">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

            <Button
                VerticalOptions="Center"
                Text="Arme"
                TextColor="White"
                BackgroundColor="Brown"
                BorderColor="Gray"
                BorderWidth="1.5"
                CornerRadius="50"
                Clicked="Button_Arme"></Button>

            <Button
                VerticalOptions="Center"
                Text="Povestirea istoriei"
                TextColor="White"
                BackgroundColor="Black"
                BorderColor="Gray"
                BorderWidth="1.5"
                CornerRadius="50"
                Clicked="Button_Povestire"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>